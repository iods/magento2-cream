<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">

    <system>
        <tab id="iods" sortOrder="100002" translate="label">
            <label><![CDATA[<strong>@iods</strong><br /><small>Magento Extensions</small>]]></label>
        </tab>

        <!-- where else should we be putting this? -->
        <section id="core" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="1" translate="label" type="text">
            <class>separator-top</class>
            <label>General Information</label>
            <tab>iods</tab>
            <resource>Iods_Core::general</resource>
            <include path="Iods_Core::system/general.xml" />
        </section>
        <section id="core" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="1" translate="label" type="text">
            <class>separator-top</class>
            <label>Extension Configuration</label>
            <tab>iods</tab>
            <resource>Iods_Core::configuration</resource>
            <include path="Iods_Core::system/extensions.xml" />
        </section>
        <section id="core" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="1" translate="label" type="text">
            <class>separator-top</class>
            <label>Extension Tests</label>
            <tab>iods</tab>
            <resource>Iods_Core::tests</resource>
            <include path="Iods_Core::system/tests.xml" />
        </section>
    </system>
</config>
