<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
<system>
    <tab id="espressobytes_modules" translate="label" sortOrder="975">
        <label>Espressobytes Modules</label>
    </tab>
    <section id="espressobytes_debughints" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">

        <label>Debug Hints</label>
        <tab>espressobytes_modules</tab>
        <resource>Magento_Config::config_system</resource>

        <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>General</label>
            <field id="show_frontend_hints" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Show Frontend Hints</label>
                <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            </field>
            <field id="show_adminhtml_hints" translate="label comment" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Show Adminhtml Hints</label>
                <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            </field>
        </group>

    </section>
</system>
</config>



