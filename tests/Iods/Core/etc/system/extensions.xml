<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">

    <group id="extensions" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
        <label><![CDATA[Extension Information]]></label>
        <!-- frontend_model>Magento\Config\Block\System\Config\Form\Fieldset</frontend_model -->
        <field id="addons" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10" translate="label comment" type="select">
            <label>Enable Extension Addons</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            <comment>Enable the remaining group of extensions for Magento 2 from @iods.</comment>
        </field>
        <field id="addon_developer" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="20" translate="label comment" type="select">
            <label>Enable Developer</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            <comment>Enable only the developer suite for Magento 2 from @iods.</comment>
        </field>
    </group>
</include>
