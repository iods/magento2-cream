<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">

    <group id="tests" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
        <label><![CDATA[Extension Tests]]></label>
        <field id="enable" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10" translate="label" type="select">
            <label>Run Extension Tests</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            <comment>Setup tests triggered by cron to ensure code is muy bueno.</comment>
        </field>
    </group>
</include>
