<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="aht" translate="label" sortOrder="500">
            <label>AHT</label>
        </tab>
        <section id='modulehelloworld' translate='label' type='text' sortOrder='100'
        showInDefault='1' showInWebsite='1' showInStore='1'>
            <label>HelloWorld</label>
            <tab>aht</tab>
            <resource>AHT_ModuleHelloWorld::config_modulehelloworld</resource>
            <group id='modulehellopage' translate="label" type='text' sortOrder='1'
                showInDefault='1' showInWebsite='1' showInStore='1' >
                <label>Module HelloWorld Settings</label>
                <field id='is_enabled' translate="label" type='select' sortOrder='10'
                showInDefault='1' showInWebsite='1' showInStore='1'>
                    <label>Is Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id='header_title' translate="true" type='text' sortOrder='20'
                showInDefault='1' showInWebsite='1' showInStore='1'>
                    <label>Header Title</label>
                </field>

                <field id='source_model_test' translate="true" type='text' sortOrder='30'
                showInDefault='1' showInWebsite='1' showInStore='1'>
                    <label>Source model test</label>
                </field>
                <field id='source_model_dropdown' translate="true" type='select' sortOrder='40'
                showInDefault='1' showInWebsite='1' showInStore='1'>
                    <label>Source model dropdown</label>
                    <source_model>AHT\ModuleHelloWorld\Model\Config\Source\Relation</source_model>
                </field>
            </group>
        </section>

        <section id='testimonial' translate="label" type='text' sortOrder='110'
        showInDefault='1' showInWebsite='1' showInStore='1'>
            <label>Testimonial</label>
            <tab>aht</tab>
            <resource>AHT_ModuleHelloWorld::config_modulehelloworld</resource>
            <group id='moduletestimonialpage' translate='lable' type='text' sortOrder='2'
            showInDefault='1' showInWebsite='1' showInStore='1'>
                <label>Testimonial Settings</label>
                <field id='module_enabled' translate='label' type='select' sortOrder='10'
                showInDefault='1' showInWebsite='1' showInStore='1'>
                    <label>Enable</label>
                    <source_model>AHT\ModuleHelloWorld\Model\Config\Source\Dropdown</source_model>
                </field>
            </group>
        </section>
    </system>
</config>